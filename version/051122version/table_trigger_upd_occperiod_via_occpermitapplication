-- Trigger: trigger_upd_occperiod_via_occperiodpermitapplicationn

DROP TRIGGER IF EXISTS trigger_upd_occperiod_via_occperiodpermitapplicationn ON public.occperiodpermitapplication;

CREATE TRIGGER trigger_upd_occperiod_via_occperiodpermitapplicationn
    AFTER INSERT OR DELETE OR UPDATE 
    ON public.occperiodpermitapplication
    FOR EACH ROW
    EXECUTE PROCEDURE public.trigger_upd_occperiod_via_occpermitapplication();

COMMENT ON TRIGGER trigger_upd_occperiod_via_occperiodpermitapplicationn ON public.occperiodpermitapplication
    IS 'Update the occperiod when the occperiodpermitapplication has action taken (upd,insert,or delete).';
