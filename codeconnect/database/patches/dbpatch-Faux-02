--Changes Boolean active to deactivated timestamp
--Matains deactived status on tables
ALTER TABLE icon
ADD deactivatedts timestamp with time zone;

UPDATE icon 
SET deactivated = '2022-04-14 12:00:00.000000+00'
WHERE active = FALSE;

ALTER TABLE icon
DROP COLUMN active;
